<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<TR.TRThingDef ParentName="ApparelUniqueMakeableBase_TR"> <!--balance standard - flak vest-->
		<defName>Jumpsuit</defName>
		<description>A simple jumpsuit to improve comfort while wearing heavy armor.\n\nJumpsuit has little protection against tiberium.</description>
		<label>jumpsuit</label>
		<graphicData>
			<texPath>Items/Apparel/Common_Jumpsuit/JS</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<requisites>
			<tiberiumResearchTasks>
				<li MayRequire="telefonmast.tiberiumrim.main">TiberiumProtection_T1</li>
			</tiberiumResearchTasks>
		</requisites>
		<costList>
			<Cloth>30</Cloth>
			<Steel>75</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<recipeMaker>
			<recipeUsers Inherit="false">
				<li>TR_TibWorkbench</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>5</Crafting>
			</skillRequirements>
		</recipeMaker>
		<thingCategories>
			<li>TRApparelsETC</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>10000</WorkToMake>
			<Mass>3</Mass>
			<Flammability>0.8</Flammability>
			<ArmorRating_Sharp>0.3</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
			<ArmorRating_Heat>0.2</ArmorRating_Heat>
			<Insulation_Cold>5</Insulation_Cold>
			<Insulation_Heat>5</Insulation_Heat>
			<EquipDelay>10</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>0.1</MoveSpeed>
			<ToxicResistance>0.1</ToxicResistance>
			<TiberiumGasResistance MayRequire="telefonmast.tiberiumrim.main">0.1</TiberiumGasResistance>
			<TiberiumInfectionResistance MayRequire="telefonmast.tiberiumrim.main">0.1</TiberiumInfectionResistance>
			<TiberiumRadiationResistance MayRequire="telefonmast.tiberiumrim.main">0.1</TiberiumRadiationResistance>
		</equippedStatOffsets>
		<apparel>
			<scoreOffset>3</scoreOffset>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Items/Apparel/Common_Jumpsuit/JS</wornGraphicPath>
			<layers>
			    <li>OnSkin</li>
			</layers>
			<!--
			<tags>
				<li>FactionInnerSet</li>
			</tags>
			<defaultOutfitTags>
				<li>FactionInnerSet</li>
			</defaultOutfitTags>
			-->
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>
	</TR.TRThingDef>

</Defs>
